<h1>Details Page</h1>
<% if(laptop) { %>
    <p>
        <%= laptop.title %>
    </p>
    <p>
        <%= laptop.description %>
    </p>
    <p>
        <%= laptop.price %> BGN
    </p>
    <p>
        <% if(laptop.available){ %>
                In Stock
            <% } else { %>
                Out of Stock
            <% } %>
    </p>
    <a href="/edit/<%= laptop.id %>">edit</a>
    <% } else { %>
        <p>This laptop not exist</p>
        <% } %>